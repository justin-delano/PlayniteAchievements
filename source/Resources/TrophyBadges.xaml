  <!-- Reuse existing metal fills from RarityBadges.xaml (these will be merged at runtime) -->
  <!-- Bronze Trophy -->
  <DrawingImage x:Key="TrophyBronze">
    <DrawingImage.Drawing>
      <DrawingGroup>
        <GeometryDrawing Geometry="{StaticResource GeoTrophy}" Brush="{StaticResource FillBronze}">
          <GeometryDrawing.Pen>
            <Pen Brush="{StaticResource RimBronze}" Thickness="3" LineJoin="Round"/>
          </GeometryDrawing.Pen>
        </GeometryDrawing>
        <!-- Shine overlay -->
        <GeometryDrawing Geometry="{StaticResource GeoTrophy}" Brush="{StaticResource ShineOverlay}"/>
      </DrawingGroup>
    </DrawingImage.Drawing>
  </DrawingImage>

  <!-- Silver Trophy -->
