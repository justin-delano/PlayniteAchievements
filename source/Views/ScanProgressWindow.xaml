<Window x:Class="PlayniteAchievements.Views.ScanProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}"
        d:DesignWidth="400">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PlayniteAchievements;component/Resources/RarityIcons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Progress bar style matching PerGameControl -->
            <Style x:Key="GameProgressBar" TargetType="ProgressBar">
                <Setter Property="Height" Value="22"/>
                <Setter Property="Minimum" Value="0"/>
                <Setter Property="Maximum" Value="100"/>
                <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource HighlightGlyphBrush}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ProgressBar">
                            <Grid>
                                <Border Background="{TemplateBinding Background}" CornerRadius="2"/>
                                <Border x:Name="PART_Track"/>
                                <Border x:Name="PART_Indicator"
                                        Background="{TemplateBinding Foreground}"
                                        HorizontalAlignment="Left"
                                        CornerRadius="2"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Scan button style matching SidebarControl -->
            <Style x:Key="ScanButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Padding" Value="14,6"/>
                <Setter Property="MinWidth" Value="80"/>
                <Setter Property="Margin" Value="0,0,6,0"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{DynamicResource ControlBackgroundBrush}"
            BorderBrush="{DynamicResource NormalBorderBrush}"
            BorderThickness="1"
            Padding="20"
            Width="380">
        <StackPanel>
            <!-- Header -->
            <Grid Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Badge Icon -->
                <Image Grid.Column="0"
                       Source="{StaticResource BadgePlatinumHexagon}"
                       Width="32"
                       Height="32"
                       Margin="0,0,12,0"
                       VerticalAlignment="Center"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"
                       Effect="{StaticResource BadgeShadow}"/>

                <!-- Title -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{DynamicResource LOCPlayAch_Title_PluginName}"
                               Style="{DynamicResource BaseTextBlockStyle}"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextBrush}"/>
                </StackPanel>
            </Grid>

            <!-- Separator -->
            <Border Height="1"
                    Background="{DynamicResource NormalBorderBrush}"
                    Margin="0,0,0,16"
                    Opacity="0.5"/>

            <!-- Progress Section -->
            <StackPanel Margin="0,0,0,16">
                <!-- Progress Message -->
                <TextBlock Text="{Binding ProgressMessage}"
                           Style="{DynamicResource BaseTextBlockStyle}"
                           Foreground="{DynamicResource TextBrush}"
                           Opacity="0.8"
                           TextTrimming="CharacterEllipsis"
                           Margin="0,0,0,10"
                           MinHeight="38"/>

                <!-- Progress Bar with Percentage -->
                <Grid>
                    <ProgressBar Value="{Binding ProgressPercent}"
                                 Style="{StaticResource GameProgressBar}"/>
                    <TextBlock Text="{Binding ProgressPercent, StringFormat={}{0:F0}%}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Style="{DynamicResource BaseTextBlockStyle}"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                </Grid>
            </StackPanel>

            <!-- Info Note -->
            <Border Background="{DynamicResource PanelBackgroundBrush}"
                    CornerRadius="3"
                    Padding="12,8"
                    Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="&#xE897;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="12"
                               Foreground="{DynamicResource TextBrush}"
                               Opacity="0.6"
                               VerticalAlignment="Top"
                               Margin="0,0,10,0"/>

                    <TextBlock Grid.Column="1"
                               Text="{Binding ScanRunningNote}"
                               Style="{DynamicResource BaseTextBlockStyle}"
                               FontSize="{DynamicResource FontSizeSmall}"
                               Foreground="{DynamicResource TextBrush}"
                               Opacity="0.6"
                               TextWrapping="Wrap"/>
                </Grid>
            </Border>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="{DynamicResource LOCPlayAch_Progress_ButtonHide}"
                        Command="{Binding HideCommand}"
                        Style="{StaticResource ScanButtonStyle}"
                        Visibility="{Binding ShowInProgressButtons, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <Button Content="{DynamicResource LOCPlayAch_Button_Cancel}"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource ScanButtonStyle}"
                        Visibility="{Binding ShowInProgressButtons, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <Button Content="{DynamicResource LOCPlayAch_Progress_ButtonContinue}"
                        Command="{Binding ContinueCommand}"
                        Style="{StaticResource ScanButtonStyle}"
                        IsDefault="True"
                        Visibility="{Binding ShowCompleteButtons, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
