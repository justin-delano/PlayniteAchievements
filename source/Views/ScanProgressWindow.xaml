<Window x:Class="PlayniteAchievements.Views.ScanProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackgroundBrush}"
        d:DesignWidth="420">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PlayniteAchievements;component/Resources/RarityIcons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Muted text style -->
            <Style x:Key="MutedTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="Opacity" Value="0.6"/>
                <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>

            <!-- Modern button style -->
            <Style x:Key="ModernActionButton" TargetType="Button"
                   BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Padding" Value="18,8"/>
                <Setter Property="MinWidth" Value="90"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Opacity" Value="0.85"/>
                    </Trigger>
                    <Trigger Property="IsPressed" Value="True">
                        <Setter Property="Opacity" Value="0.7"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Border Padding="24" Width="420">
        <StackPanel>
            <!-- Header with icon and title -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Trophy Icon -->
                <Image Grid.Column="0"
                       Source="{StaticResource BadgePlatinumHexagon}"
                       Width="32"
                       Height="32"
                       Margin="0,0,12,0"
                       VerticalAlignment="Center"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>

                <!-- Title -->
                <TextBlock Grid.Column="1"
                           Text="{DynamicResource LOCPlayAch_Title_PluginName}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}"
                           VerticalAlignment="Center"/>
            </Grid>

            <!-- Decorative accent line -->
            <Border Height="2"
                    Width="50"
                    HorizontalAlignment="Left"
                    Background="#4CC9F0"
                    CornerRadius="1"
                    Margin="0,0,0,20"/>

            <!-- Progress Card -->
            <Border Background="{DynamicResource ControlBackgroundBrush}"
                    CornerRadius="8"
                    Padding="18"
                    Margin="0,0,0,16">
                <StackPanel>
                    <!-- Progress Message -->
                    <TextBlock Text="{Binding ProgressMessage}"
                               Style="{DynamicResource BaseTextBlockStyle}"
                               Foreground="{DynamicResource TextBrush}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,14"
                               MinHeight="40"/>

                    <!-- Progress Bar -->
                    <Grid>
                        <ProgressBar Value="{Binding ProgressPercent}"
                                     Maximum="100"
                                     Height="6"
                                     Minimum="0">
                            <ProgressBar.Style>
                                <Style TargetType="ProgressBar">
                                    <Setter Property="Foreground" Value="#4CC9F0"/>
                                </Style>
                            </ProgressBar.Style>
                        </ProgressBar>

                        <!-- Scanning indicator -->
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{DynamicResource FontSizeSmall}"
                                   Foreground="{DynamicResource TextBrush}"
                                   Opacity="0.8">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="{Binding ProgressPercent, StringFormat={}{0:F0}%}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsComplete}" Value="True">
                                            <Setter Property="Text" Value="&#xE73E;"/>
                                            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                                            <Setter Property="Foreground" Value="#06FFA5"/>
                                            <Setter Property="FontSize" Value="12"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsScanning}" Value="False">
                                            <DataTrigger Binding="{Binding IsComplete}" Value="False">
                                                <Setter Property="Text" Value="&#xE711;"/>
                                                <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                                                <Setter Property="Foreground" Value="#F72585"/>
                                                <Setter Property="FontSize" Value="12"/>
                                            </DataTrigger>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Info Note -->
            <Border Background="#10000000"
                    CornerRadius="6"
                    Padding="12"
                    Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="&#xE897;"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="12"
                               Foreground="#4CC9F0"
                               VerticalAlignment="Top"
                               Margin="0,0,10,0"/>

                    <TextBlock Grid.Column="1"
                               Text="{Binding ScanRunningNote}"
                               Style="{StaticResource MutedTextStyle}"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,8,0,0">
                <Button Content="{DynamicResource LOCPlayAch_Progress_ButtonHide}"
                        Command="{Binding HideCommand}"
                        Style="{StaticResource ModernActionButton}"
                        Margin="0,0,8,0"
                        Visibility="{Binding ShowInProgressButtons, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <Button Content="{DynamicResource LOCPlayAch_Button_Cancel}"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource ModernActionButton}"
                        Visibility="{Binding ShowInProgressButtons, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <Button Content="{DynamicResource LOCPlayAch_Progress_ButtonContinue}"
                        Command="{Binding ContinueCommand}"
                        Style="{StaticResource ModernActionButton}"
                        IsDefault="True"
                        Visibility="{Binding ShowCompleteButtons, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
