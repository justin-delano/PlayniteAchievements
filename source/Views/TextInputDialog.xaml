<UserControl x:Class="PlayniteAchievements.Views.TextInputDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="180" d:DesignWidth="400"
             FocusManager.FocusedElement="{Binding ElementName=InputTextBox}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="{Binding Title}"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   TextWrapping="Wrap"/>

        <TextBlock Grid.Row="1"
                   Text="{Binding Hint}"
                   FontSize="12"
                   Margin="0,0,0,10"
                   TextWrapping="Wrap"
                   Opacity="0.8"/>

        <TextBox Grid.Row="2"
                 x:Name="InputTextBox"
                 Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                 Padding="8"
                 FontSize="14"
                 Margin="0,0,0,15"
                 KeyDown="InputTextBox_KeyDown"/>

        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="{DynamicResource LOCPlayAch_Button_Ok}"
                    Click="OkButton_Click"
                    Padding="15,8"
                    Margin="0,0,10,0"
                    IsDefault="True"/>
            <Button Content="{DynamicResource LOCPlayAch_Button_Cancel}"
                    Click="CancelButton_Click"
                    Padding="15,8"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</UserControl>
