<UserControl x:Class="PlayniteAchievements.Views.ThemeIntegration.Legacy.Controls.AchievementImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PlayniteAchievements.Views.ThemeIntegration.Legacy.Controls"
             xmlns:helpers="clr-namespace:PlayniteAchievements.Views.Helpers"
             xmlns:converters="clr-namespace:PlayniteAchievements.Views.Converters"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" d:DesignHeight="48" d:DesignWidth="48">

    <UserControl.Resources>
        <ResourceDictionary>
            <converters:BooleanConverter x:Key="InvertedBooleanToVisibilityConverter" Mode="InvertedToVisibility" />
            <converters:BooleanConverter x:Key="BooleanToVisibilityConverter" Mode="ToVisibility" />
            <converters:LocalDateTimeConverter x:Key="LocalDateTimeConverter" />
            <converters:PercentToGlowEffectConverter x:Key="PercentToGlowEffectConverter" />
            <converters:PercentToRarityBadgeConverter x:Key="PercentToRarityBadgeConverter" />
            <converters:LockedIconSelectorConverter x:Key="LockedIconSelectorConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Height="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Height}"
          Width="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=Width}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!-- Border with clipping to handle rectangular images, centered in square container -->
        <Border ClipToBounds="True">
            <Image Stretch="UniformToFill" RenderOptions.BitmapScalingMode="Fant" x:Name="PART_Image"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Loaded="Image_Loaded" ImageFailed="Image_ImageFailed"
                   helpers:AsyncImage.Gray="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=IsLocked}">
                <helpers:AsyncImage.Uri>
                    <MultiBinding Converter="{StaticResource LockedIconSelectorConverter}">
                        <Binding RelativeSource="{RelativeSource AncestorType=UserControl}" Path="IsLocked" />
                        <Binding RelativeSource="{RelativeSource AncestorType=UserControl}" Path="IconCustom" />
                        <Binding RelativeSource="{RelativeSource AncestorType=UserControl}" Path="Icon" />
                    </MultiBinding>
                </helpers:AsyncImage.Uri>
                <Image.Style>
                    <Style TargetType="{x:Type Image}">
                        <Style.Triggers>
                            <!-- Rarity indicator glow effect - color based on achievement rarity -->
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=EnableRaretyIndicator}" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <MultiBinding Converter="{StaticResource PercentToGlowEffectConverter}">
                                            <Binding RelativeSource="{RelativeSource AncestorType=UserControl}" Path="Percent" />
                                            <Binding RelativeSource="{RelativeSource AncestorType=UserControl}" Path="UltraRareThreshold" />
                                            <Binding RelativeSource="{RelativeSource AncestorType=UserControl}" Path="RareThreshold" />
                                            <Binding RelativeSource="{RelativeSource AncestorType=UserControl}" Path="UncommonThreshold" />
                                        </MultiBinding>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
        </Border>

        <!-- Custom icon text overlay (only shown when using custom locked icon) -->
        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=IconText, FallbackValue='ðŸ”’'}"
                   VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" Name="PART_IconText" FontWeight="Bold"
                   Foreground="Black"
                   Visibility="Collapsed">
            <TextBlock.Effect>
                <DropShadowEffect Color="White" Opacity="0.75" BlurRadius="3" ShadowDepth="0" />
            </TextBlock.Effect>
        </TextBlock>

        <!-- Progress bar overlay (always visible per compatibility request). -->
        <Grid VerticalAlignment="Bottom"
              Visibility="Visible">
            <ProgressBar Height="12" Name="PART_ProgressBar" Maximum="100" />
            <Label Name="PART_Label"
                   ContentStringFormat=" {0}%"
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="10" />
        </Grid>
    </Grid>
</UserControl>
