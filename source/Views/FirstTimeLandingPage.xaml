<UserControl x:Class="PlayniteAchievements.Views.FirstTimeLandingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:PlayniteAchievements.Views.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="360">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PlayniteAchievements;component/Resources/RarityIcons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:BooleanConverter x:Key="BoolToVis" Mode="ToVisibility"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20,16,20,24">

            <!-- Plugin Icon -->
            <Image x:Name="PluginIcon"
                   Source="pack://application:,,,/icon.png"
                   Width="56"
                   Height="56"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,12"
                   RenderOptions.BitmapScalingMode="HighQuality"/>

            <!-- Main Title -->
            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_Title}"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextBrush}"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,6"/>

            <!-- Rarity Icons Decoration -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,4,0,20">
                <Image Source="{StaticResource BadgeBronzeTriangle}"
                       Width="28"
                       Height="28"
                       Margin="3"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <Image Source="{StaticResource BadgeSilverSquare}"
                       Width="28"
                       Height="28"
                       Margin="3"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <Image Source="{StaticResource BadgeGoldPentagon}"
                       Width="28"
                       Height="28"
                       Margin="3"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <Image Source="{StaticResource BadgePlatinumHexagon}"
                       Width="28"
                       Height="28"
                       Margin="3"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <Image Source="{StaticResource BadgePerfectGame}"
                       Width="28"
                       Height="28"
                       Margin="3"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
            </StackPanel>

            <!-- Provider Status List - Always Visible -->
            <StackPanel Margin="0,0,0,16">
                <!-- Section Header -->
                <Grid Margin="0,0,0,10">
                    <TextBlock Text="PROVIDER STATUS"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextBrush}"
                               Opacity="0.7"
                               CharacterSpacing="50"/>
                </Grid>

                <!-- Provider Cards -->
                <ItemsControl ItemsSource="{Binding Providers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,8"
                                    Background="{DynamicResource ControlBackgroundBrush}"
                                    CornerRadius="6"
                                    Padding="14,12">
                                <Border.Effect>
                                    <DropShadowEffect Color="#000000"
                                                    BlurRadius="8"
                                                    Opacity="0.08"
                                                    OffsetX="0"
                                                    OffsetY="2"/>
                                </Border.Effect>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsAuthenticated}" Value="True">
                                                <Setter Property="BorderBrush" Value="#06FFA5"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Status Icon with Circle Background -->
                                    <Grid Grid.Column="0" Width="32" Height="32" Margin="0,0,12,0">
                                        <Ellipse Fill="{DynamicResource ControlBackgroundBrush}">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsAuthenticated}" Value="True">
                                                            <Setter Property="Fill" Value="#06FFA5"/>
                                                            <Setter Property="Opacity" Value="0.15"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsAuthenticated}" Value="False">
                                                            <Setter Property="Fill" Value="#F72585"/>
                                                            <Setter Property="Opacity" Value="0.12"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <TextBlock Text="{Binding StatusIcon}"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   FontSize="16"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsAuthenticated}" Value="True">
                                                            <Setter Property="Foreground" Value="#06FFA5"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsAuthenticated}" Value="False">
                                                            <Setter Property="Foreground" Value="#F72585"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>

                                    <!-- Provider Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="13"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextBrush}"/>
                                        <TextBlock FontSize="10"
                                                   Foreground="{DynamicResource TextBrush}"
                                                   Opacity="0.55"
                                                   Margin="0,2,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsAuthenticated}" Value="True">
                                                            <Setter Property="Text" Value="Ready to scan"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsAuthenticated}" Value="False">
                                                            <Setter Property="Text" Value="Configure in settings"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Status Badge -->
                                    <Border Grid.Column="2"
                                            VerticalAlignment="Center"
                                            CornerRadius="10"
                                            Padding="10,4"
                                            Margin="8,0,0,0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsAuthenticated}" Value="True">
                                                        <Setter Property="Background" Value="#06FFA5"/>
                                                        <Setter Property="Opacity" Value="0.2"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsAuthenticated}" Value="False">
                                                        <Setter Property="Background" Value="#3A3A3A"/>
                                                        <Setter Property="Opacity" Value="0.5"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock FontSize="9"
                                                   FontWeight="SemiBold"
                                                   CharacterSpacing="30"
                                                   Padding="4,1">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsAuthenticated}" Value="True">
                                                            <Setter Property="Foreground" Value="#06FFA5"/>
                                                            <Setter Property="Text" Value="Ready"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsAuthenticated}" Value="False">
                                                            <Setter Property="Foreground" Value="#888888"/>
                                                            <Setter Property="Text" Value="Setup"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Content states switched via visibility bindings -->
            <Grid>

                <!-- State 1: No Auth Configured -->
                <StackPanel x:Name="NoAuthPanel"
                            Visibility="{Binding ShowNoAuthPanel, Converter={StaticResource BoolToVis}}">

                    <!-- Config Card -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="18"
                            Margin="0,0,0,14">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NoAuthTitle}"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NoAuthMessage}"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="{DynamicResource LOCPlayAch_Landing_SettingsDiagramTitle}"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,12,0,10"/>

                    <!-- Step 1 -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="14,12"
                            Margin="0,0,0,8">
                        <TextBlock Text="{DynamicResource LOCPlayAch_Landing_Step1}"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextBrush}"
                                   TextWrapping="Wrap"/>
                    </Border>

                    <!-- Step 2 -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="14,12"
                            Margin="0,0,0,8">
                        <TextBlock Text="{DynamicResource LOCPlayAch_Landing_Step2}"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextBrush}"
                                   TextWrapping="Wrap"/>
                    </Border>

                    <!-- Step 3 -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="14,12"
                            Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_Step3}"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_SettingsFinalHint}"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.65"
                                       FontStyle="Italic"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="{DynamicResource LOCPlayAch_Landing_RefreshAfterConfig}"
                               FontSize="11"
                               Foreground="{DynamicResource TextBrush}"
                               TextWrapping="Wrap"
                               Opacity="0.65"
                               FontStyle="Italic"
                               Margin="0,10,0,0"/>
                </StackPanel>

                <!-- State 2: Has Auth, No Cache (Needs Scan) -->
                <StackPanel x:Name="NeedsScanPanel"
                            Visibility="{Binding ShowNeedsScanPanel, Converter={StaticResource BoolToVis}}">

                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="18"
                            Margin="0,0,0,14">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NeedsScanTitle}"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NeedsScanMessage}"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"
                                       Margin="0,0,0,14"/>
                            <Button Content="{DynamicResource LOCPlayAch_Landing_BeginScan}"
                                    Command="{Binding BeginScanCommand}"
                                    HorizontalAlignment="Center"
                                    Padding="20,8"
                                    MinWidth="130"/>
                        </StackPanel>
                    </Border>

                    <!-- Ready indicator -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="18"
                            HorizontalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="&#xE8FB;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="32"
                                       Foreground="{DynamicResource TextBrush}"
                                       Opacity="0.6"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="Your accounts are ready!"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.65"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- State 3: Has Auth + Cache (Existing User) -->
                <StackPanel x:Name="HasDataPanel"
                            Visibility="{Binding ShowHasDataPanel, Converter={StaticResource BoolToVis}}">

                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="18"
                            Margin="0,0,0,14">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_HasDataTitle}"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_HasDataMessage}"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"
                                       Margin="0,0,0,14"/>
                            <Button Content="{DynamicResource LOCPlayAch_Landing_Continue}"
                                    Command="{Binding ContinueCommand}"
                                    HorizontalAlignment="Center"
                                    Padding="20,8"
                                    MinWidth="130"/>
                        </StackPanel>
                    </Border>

                    <!-- Existing data indicator -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="18"
                            HorizontalAlignment="Center">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,8">
                                <Image Source="{StaticResource BadgePerfectGame}"
                                       Width="24"
                                       Height="24"
                                       Margin="2"
                                       SnapsToDevicePixels="True"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                                <Image Source="{StaticResource BadgePlatinumHexagon}"
                                       Width="24"
                                       Height="24"
                                       Margin="2"
                                       SnapsToDevicePixels="True"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                                <Image Source="{StaticResource BadgeGoldPentagon}"
                                       Width="24"
                                       Height="24"
                                       Margin="2"
                                       SnapsToDevicePixels="True"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                            </StackPanel>
                            <TextBlock Text="Found your existing achievement data"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.65"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
