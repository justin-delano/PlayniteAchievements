<UserControl x:Class="PlayniteAchievements.Views.FirstTimeLandingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:PlayniteAchievements.Views.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="360">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PlayniteAchievements;component/Resources/RarityIcons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:BooleanConverter x:Key="BoolToVis" Mode="ToVisibility"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20,16,20,24">

            <!-- Plugin Icon -->
            <Image x:Name="PluginIcon"
                   Source="pack://application:,,,/icon.png"
                   Width="56"
                   Height="56"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,12"
                   RenderOptions.BitmapScalingMode="HighQuality"/>

            <!-- Main Title -->
            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_Title}"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextBrush}"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,6"/>

            <!-- Rarity Icons Decoration -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,4,0,20">
                <Image Source="{StaticResource BadgeBronzeTriangle}"
                       Width="28"
                       Height="28"
                       Margin="3"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <Image Source="{StaticResource BadgeSilverSquare}"
                       Width="28"
                       Height="28"
                       Margin="3"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <Image Source="{StaticResource BadgeGoldPentagon}"
                       Width="28"
                       Height="28"
                       Margin="3"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <Image Source="{StaticResource BadgePlatinumHexagon}"
                       Width="28"
                       Height="28"
                       Margin="3"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <Image Source="{StaticResource BadgePerfectGame}"
                       Width="28"
                       Height="28"
                       Margin="3"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
            </StackPanel>

            <!-- Provider Status List - Always Visible -->
            <StackPanel Margin="0,0,0,16">
                <!-- Section Header -->
                <TextBlock Text="{DynamicResource LOCPlayAch_Landing_ProviderStatus}"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}"
                           Opacity="0.7"
                           Margin="0,0,0,10"/>

                <!-- Provider Cards -->
                <ItemsControl ItemsSource="{Binding Providers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,8"
                                    Background="{DynamicResource ControlBackgroundBrush}"
                                    CornerRadius="6"
                                    Padding="14,12">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8"
                                                    ShadowDepth="2"
                                                    Opacity="0.25"
                                                    Color="#000000"/>
                                </Border.Effect>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsAuthenticated}" Value="True">
                                                <Setter Property="BorderBrush" Value="#06FFA5"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Status Icon -->
                                    <TextBlock Grid.Column="0" Text="{Binding StatusIcon}"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="18"
                                               Margin="0,0,12,0"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsAuthenticated}" Value="True">
                                                        <Setter Property="Foreground" Value="#06FFA5"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsAuthenticated}" Value="False">
                                                        <Setter Property="Foreground" Value="#F72585"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- Provider Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                   FontSize="13"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextBrush}"/>
                                        <TextBlock Text="{Binding StatusSubtitle}"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource TextBrush}"
                                                   Opacity="0.6"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <!-- Status Badge -->
                                    <TextBlock Grid.Column="2" Text="{Binding StatusBadgeText}"
                                               FontSize="8"
                                               FontWeight="SemiBold"
                                               Padding="8,3"
                                               VerticalAlignment="Center"
                                               Margin="8,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#666666"/>
                                                <Setter Property="Background" Value="#2A2A2A"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsAuthenticated}" Value="True">
                                                        <Setter Property="Foreground" Value="#005533"/>
                                                        <Setter Property="Background" Value="#06FFA5"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Content states switched via visibility bindings -->
            <Grid>

                <!-- State 1: No Auth Configured -->
                <StackPanel x:Name="NoAuthPanel"
                            Visibility="{Binding ShowNoAuthPanel, Converter={StaticResource BoolToVis}}">

                    <!-- Config Card -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="18"
                            Margin="0,0,0,14">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NoAuthTitle}"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NoAuthMessage}"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="{DynamicResource LOCPlayAch_Landing_SettingsDiagramTitle}"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,12,0,10"/>

                    <!-- Navigation Tree - Simple indented list with arrows -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="16,14"
                            Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NavInstructions}"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextBrush}"
                                       Opacity="0.8"
                                       Margin="0,0,0,12"/>

                            <TextBlock FontSize="12" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,4">
                                <Run Text="&#xE97C;" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource TextBrush}" Opacity="0.5"/>
                                <Run Text=" " />
                                <Run Text="{DynamicResource LOCPlayAch_Landing_NavSettings}"/>
                            </TextBlock>

                            <TextBlock FontSize="12" Foreground="{DynamicResource TextBrush}" Margin="20,0,0,4">
                                <Run Text="&#xE97C;" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource TextBrush}" Opacity="0.5"/>
                                <Run Text=" " />
                                <Run Text="{DynamicResource LOCPlayAch_Landing_NavAddons}"/>
                            </TextBlock>

                            <TextBlock FontSize="12" Foreground="{DynamicResource TextBrush}" Margin="40,0,0,4">
                                <Run Text="&#xE97C;" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource TextBrush}" Opacity="0.5"/>
                                <Run Text=" " />
                                <Run Text="{DynamicResource LOCPlayAch_Landing_NavExtensionSettings}"/>
                            </TextBlock>

                            <TextBlock FontSize="12" Foreground="{DynamicResource TextBrush}" Margin="60,0,0,4">
                                <Run Text="&#xE97C;" FontFamily="Segoe MDL2 Assets" Foreground="{DynamicResource TextBrush}" Opacity="0.5"/>
                                <Run Text=" " />
                                <Run Text="{DynamicResource LOCPlayAch_Landing_NavGeneric}"/>
                            </TextBlock>

                            <TextBlock FontSize="12" FontWeight="SemiBold" Foreground="#4CC9F0" Margin="80,0,0,0">
                                <Run Text="&#xE97C;" FontFamily="Segoe MDL2 Assets"/>
                                <Run Text=" " />
                                <Run Text="{DynamicResource LOCPlayAch_Landing_NavPluginName}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Configuration hint -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="14,12"
                            Margin="0,0,0,8">
                        <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NavThenConfigure}"
                                   FontSize="11"
                                   Foreground="{DynamicResource TextBrush}"
                                   TextWrapping="Wrap"
                                   Opacity="0.7"/>
                    </Border>

                    <TextBlock Text="{DynamicResource LOCPlayAch_Landing_RefreshAfterConfig}"
                               FontSize="11"
                               Foreground="{DynamicResource TextBrush}"
                               TextWrapping="Wrap"
                               Opacity="0.65"
                               FontStyle="Italic"
                               Margin="0,10,0,0"/>
                </StackPanel>

                <!-- State 2: Has Auth, No Cache (Needs Scan) -->
                <StackPanel x:Name="NeedsScanPanel"
                            Visibility="{Binding ShowNeedsScanPanel, Converter={StaticResource BoolToVis}}">

                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="18"
                            Margin="0,0,0,14">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NeedsScanTitle}"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NeedsScanMessage}"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"
                                       Margin="0,0,0,14"/>
                            <Button Content="{DynamicResource LOCPlayAch_Landing_BeginScan}"
                                    Command="{Binding BeginScanCommand}"
                                    HorizontalAlignment="Center"
                                    Padding="20,8"
                                    MinWidth="130"/>
                        </StackPanel>
                    </Border>

                    <!-- Ready indicator -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="18"
                            HorizontalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="&#xE8FB;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="32"
                                       Foreground="#06FFA5"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_Status_ReadyToScan}"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.65"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- State 3: Has Auth + Cache (Existing User) -->
                <StackPanel x:Name="HasDataPanel"
                            Visibility="{Binding ShowHasDataPanel, Converter={StaticResource BoolToVis}}">

                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="18"
                            Margin="0,0,0,14">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_HasDataTitle}"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,6"/>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_HasDataMessage}"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"
                                       Margin="0,0,0,14"/>
                            <Button Content="{DynamicResource LOCPlayAch_Landing_Continue}"
                                    Command="{Binding ContinueCommand}"
                                    HorizontalAlignment="Center"
                                    Padding="20,8"
                                    MinWidth="130"/>
                        </StackPanel>
                    </Border>

                    <!-- Existing data indicator -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="18"
                            HorizontalAlignment="Center">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,8">
                                <Image Source="{StaticResource BadgePerfectGame}"
                                       Width="24"
                                       Height="24"
                                       Margin="2"
                                       SnapsToDevicePixels="True"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                                <Image Source="{StaticResource BadgePlatinumHexagon}"
                                       Width="24"
                                       Height="24"
                                       Margin="2"
                                       SnapsToDevicePixels="True"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                                <Image Source="{StaticResource BadgeGoldPentagon}"
                                       Width="24"
                                       Height="24"
                                       Margin="2"
                                       SnapsToDevicePixels="True"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                            </StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_HasDataFound}"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.65"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
