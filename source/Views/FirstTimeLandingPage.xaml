<UserControl x:Class="PlayniteAchievements.Views.FirstTimeLandingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:PlayniteAchievements.Views.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="380">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PlayniteAchievements;component/Resources/RarityIcons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:BooleanConverter x:Key="BoolToVis" Mode="ToVisibility"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="24,20,24,32">

            <!-- Plugin Icon -->
            <Image x:Name="PluginIcon"
                   Source="pack://application:,,,/icon.png"
                   Width="64"
                   Height="64"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,16"
                   RenderOptions.BitmapScalingMode="HighQuality"/>

            <!-- Main Title -->
            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_Title}"
                       FontSize="22"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextBrush}"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,8"/>

            <!-- Rarity Icons Decoration -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,8,0,24">
                <Image Source="{StaticResource BadgeBronzeTriangle}"
                       Width="32"
                       Height="32"
                       Margin="4"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <Image Source="{StaticResource BadgeSilverSquare}"
                       Width="32"
                       Height="32"
                       Margin="4"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <Image Source="{StaticResource BadgeGoldPentagon}"
                       Width="32"
                       Height="32"
                       Margin="4"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <Image Source="{StaticResource BadgePlatinumHexagon}"
                       Width="32"
                       Height="32"
                       Margin="4"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
            </StackPanel>

            <!-- Content states switched via visibility bindings -->
            <Grid>

                <!-- State 1: No Auth Configured -->
                <StackPanel x:Name="NoAuthPanel"
                            Visibility="{Binding ShowNoAuthPanel, Converter={StaticResource BoolToVis}}">

                    <!-- Config Card -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            BorderBrush="{DynamicResource TextBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="20"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NoAuthTitle}"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NoAuthMessage}"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="{DynamicResource LOCPlayAch_Landing_SettingsDiagramTitle}"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,16,0,12"/>

                    <!-- Step 1 -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            BorderBrush="{DynamicResource TextBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="16,14"
                            Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_Step1}"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Step 2 -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            BorderBrush="{DynamicResource TextBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="16,14"
                            Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_Step2}"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Step 3 -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            BorderBrush="{DynamicResource TextBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="16,14"
                            Margin="0,0,0,8">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_Step3}"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_SettingsFinalHint}"
                                       FontSize="11"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.65"
                                       FontStyle="Italic"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="{DynamicResource LOCPlayAch_Landing_RefreshAfterConfig}"
                               FontSize="11"
                               Foreground="{DynamicResource TextBrush}"
                               TextWrapping="Wrap"
                               Opacity="0.65"
                               FontStyle="Italic"
                               Margin="0,12,0,0"/>
                </StackPanel>

                <!-- State 2: Has Auth, No Cache (Needs Scan) -->
                <StackPanel x:Name="NeedsScanPanel"
                            Visibility="{Binding ShowNeedsScanPanel, Converter={StaticResource BoolToVis}}">

                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            BorderBrush="{DynamicResource TextBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="20"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NeedsScanTitle}"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NeedsScanMessage}"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"
                                       Margin="0,0,0,16"/>
                            <Button Content="{DynamicResource LOCPlayAch_Landing_BeginScan}"
                                    Command="{Binding BeginScanCommand}"
                                    HorizontalAlignment="Center"
                                    Padding="24,10"
                                    MinWidth="140"/>
                        </StackPanel>
                    </Border>

                    <!-- Ready indicator -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            BorderBrush="{DynamicResource TextBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="20"
                            HorizontalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="&#xE8FB;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="36"
                                       Foreground="{DynamicResource TextBrush}"
                                       Opacity="0.6"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Your accounts are ready!"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.65"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- State 3: Has Auth + Cache (Existing User) -->
                <StackPanel x:Name="HasDataPanel"
                            Visibility="{Binding ShowHasDataPanel, Converter={StaticResource BoolToVis}}">

                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            BorderBrush="{DynamicResource TextBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="20"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_HasDataTitle}"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_HasDataMessage}"
                                       FontSize="13"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"
                                       Margin="0,0,0,16"/>
                            <Button Content="{DynamicResource LOCPlayAch_Landing_Continue}"
                                    Command="{Binding ContinueCommand}"
                                    HorizontalAlignment="Center"
                                    Padding="24,10"
                                    MinWidth="140"/>
                        </StackPanel>
                    </Border>

                    <!-- Existing data indicator -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            BorderBrush="{DynamicResource TextBrush}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="20"
                            HorizontalAlignment="Center">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,8">
                                <Image Source="{StaticResource BadgePlatinumHexagon}"
                                       Width="28"
                                       Height="28"
                                       Margin="2"
                                       SnapsToDevicePixels="True"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                                <Image Source="{StaticResource BadgeGoldPentagon}"
                                       Width="28"
                                       Height="28"
                                       Margin="2"
                                       SnapsToDevicePixels="True"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                                <Image Source="{StaticResource BadgeSilverSquare}"
                                       Width="28"
                                       Height="28"
                                       Margin="2"
                                       SnapsToDevicePixels="True"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                            </StackPanel>
                            <TextBlock Text="Found your existing achievement data"
                                       FontSize="12"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.65"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
