<UserControl x:Class="PlayniteAchievements.Views.FirstTimeLandingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:PlayniteAchievements.Views.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="360">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PlayniteAchievements;component/Resources/RarityIcons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:BooleanConverter x:Key="BoolToVis" Mode="ToVisibility"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20,16,20,24">

            <!-- Plugin Icon -->
            <Image x:Name="PluginIcon"
                   Source="pack://application:,,,/icon.png"
                   Width="56"
                   Height="56"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,12"
                   RenderOptions.BitmapScalingMode="HighQuality"/>

            <!-- Main Title -->
            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_Title}"
                       FontSize="22"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextBrush}"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,6"/>

            <!-- Rarity Icons Decoration -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,4,0,20">
                <Image Source="{StaticResource BadgeBronzeTriangle}"
                       Width="28"
                       Height="28"
                       Margin="3"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <Image Source="{StaticResource BadgeSilverSquare}"
                       Width="28"
                       Height="28"
                       Margin="3"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <Image Source="{StaticResource BadgeGoldPentagon}"
                       Width="28"
                       Height="28"
                       Margin="3"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <Image Source="{StaticResource BadgePlatinumHexagon}"
                       Width="28"
                       Height="28"
                       Margin="3"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <Image Source="{StaticResource BadgeCompletedGame}"
                       Width="28"
                       Height="28"
                       Margin="3"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
            </StackPanel>

            <StackPanel MinWidth="800" HorizontalAlignment="Center">

            <!-- Language Selector -->
            <Border Background="{DynamicResource ControlBackgroundBrush}"
                    CornerRadius="6"
                    Padding="12,10"
                    Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="{DynamicResource LOCPlayAch_Landing_Language}"
                               FontSize="{DynamicResource FontSize}"
                               FontWeight="Medium"
                               Foreground="{DynamicResource TextBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>

                    <TextBlock Grid.Column="1"
                               FontSize="{DynamicResource FontSize}"
                               Foreground="{DynamicResource TextBrush}"
                               Opacity="0.6"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap">
                        Language for achievement text. Providers will use this when available.
                    </TextBlock>

                    <ComboBox Grid.Column="2"
                              Width="180"
                              SelectedValuePath="Tag"
                              SelectedValue="{Binding GlobalLanguage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              VerticalContentAlignment="Center">
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_English}" Tag="english"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_German}" Tag="german"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_French}" Tag="french"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Spanish}" Tag="spanish"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Italian}" Tag="italian"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Portuguese}" Tag="portuguese"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_BrazilianPortuguese}" Tag="brazilian"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Russian}" Tag="russian"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Polish}" Tag="polish"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Dutch}" Tag="dutch"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Swedish}" Tag="swedish"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Finnish}" Tag="finnish"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Danish}" Tag="danish"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Norwegian}" Tag="norwegian"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Hungarian}" Tag="hungarian"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Czech}" Tag="czech"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Romanian}" Tag="romanian"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Turkish}" Tag="turkish"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Greek}" Tag="greek"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Bulgarian}" Tag="bulgarian"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Ukrainian}" Tag="ukrainian"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Thai}" Tag="thai"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Vietnamese}" Tag="vietnamese"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Japanese}" Tag="japanese"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Korean}" Tag="koreana"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_SimplifiedChinese}" Tag="schinese"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_TraditionalChinese}" Tag="tchinese"/>
                        <ComboBoxItem Content="{DynamicResource LOCPlayAch_Settings_SteamLanguage_Arabic}" Tag="arabic"/>
                    </ComboBox>
                </Grid>
            </Border>

            <!-- Provider Status List - Always Visible -->
            <StackPanel Margin="0,0,0,16">
                <!-- Section Header -->
                <TextBlock Text="{DynamicResource LOCPlayAch_Landing_ProviderStatus}"
                           FontSize="{DynamicResource FontSize}"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}"
                           Opacity="0.7"
                           Margin="0,0,0,10"/>

                <!-- Provider Cards -->
                <ItemsControl ItemsSource="{Binding Providers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,8"
                                    Background="{DynamicResource ControlBackgroundBrush}"
                                    CornerRadius="6"
                                    Padding="12,10">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsAuthenticated}" Value="True">
                                                <Setter Property="BorderBrush" Value="#06FFA5"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Status Icon -->
                                    <TextBlock Grid.Column="0" Text="{Binding StatusIcon}"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="{DynamicResource FontSize}"
                                               Margin="0,0,10,0"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsAuthenticated}" Value="True">
                                                        <Setter Property="Foreground" Value="#06FFA5"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsAuthenticated}" Value="False">
                                                        <Setter Property="Foreground" Value="#F72585"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                                                        <Setter Property="Foreground" Value="#666666"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- Provider Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                   Style="{DynamicResource BaseTextBlockStyle}"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextBrush}"/>
                                        <TextBlock Text="{Binding StatusSubtitle}"
                                                   FontSize="{DynamicResource FontSize}"
                                                   Foreground="{DynamicResource TextBrush}"
                                                   Opacity="0.6"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <!-- Enable Toggle -->
                                    <CheckBox Grid.Column="2"
                                              Content="{DynamicResource LOCPlayAch_Landing_EnableProvider}"
                                              IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                              VerticalAlignment="Center"
                                              Margin="12,0"
                                              FontSize="{DynamicResource FontSizeSmall}"
                                              Command="{Binding DataContext.ToggleProviderCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              CommandParameter="{Binding ProviderKey}"/>

                                    <!-- Status Badge -->
                                    <TextBlock Grid.Column="3" Text="{Binding StatusBadgeText}"
                                               FontSize="{DynamicResource FontSize}"
                                               FontWeight="SemiBold"
                                               Padding="6,2"
                                               VerticalAlignment="Center"
                                               Margin="6,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#666666"/>
                                                <Setter Property="Background" Value="#2A2A2A"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsAuthenticated}" Value="True">
                                                        <Setter Property="Foreground" Value="#005533"/>
                                                        <Setter Property="Background" Value="#06FFA5"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                                                        <Setter Property="Foreground" Value="#888888"/>
                                                        <Setter Property="Background" Value="#444444"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Content states switched via visibility bindings -->
            <Grid>

                <!-- State 1: No Auth Configured -->
                <StackPanel x:Name="NoAuthPanel"
                            Visibility="{Binding ShowNoAuthPanel, Converter={StaticResource BoolToVis}}">

                    <!-- Config Card -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="16"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NoAuthTitle}"
                                       Style="{DynamicResource BaseTextBlockStyle}"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NoAuthMessage}"
                                       Style="{DynamicResource BaseTextBlockStyle}"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"/>
                        </StackPanel>
                    </Border>

                    <!-- Open Settings Button -->
                    <Button Content="{DynamicResource LOCPlayAch_Landing_OpenSettings}"
                            Command="{Binding OpenPluginSettingsCommand}"
                            HorizontalAlignment="Center"
                            Padding="16,6"
                            MinWidth="150"
                            Margin="0,10,0,12"/>

                </StackPanel>

                <!-- State 2: Has Auth, No Cache (Needs Refresh) -->
                <StackPanel x:Name="NeedsRefreshPanel"
                            Visibility="{Binding ShowNeedsRefreshPanel, Converter={StaticResource BoolToVis}}">

                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="16"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NeedsRefreshTitle}"
                                       Style="{DynamicResource BaseTextBlockStyle}"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NeedsRefreshMessage}"
                                       Style="{DynamicResource BaseTextBlockStyle}"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"
                                       Margin="0,0,0,12"/>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <ComboBox x:Name="RefreshModeComboBox"
                                          ItemsSource="{Binding RefreshModes}"
                                          DisplayMemberPath="ShortDisplayName"
                                          SelectedValuePath="Key"
                                          SelectedValue="{Binding SelectedRefreshMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Width="110"
                                          Margin="0,0,8,0"
                                          VerticalContentAlignment="Center"/>
                                <Button Content="{DynamicResource LOCPlayAch_Landing_BeginRefresh}"
                                        Command="{Binding BeginRefreshCommand}"
                                        Padding="12,6"
                                        MinWidth="100"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Ready indicator -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="16"
                            HorizontalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="&#xE8FB;"
                                       FontFamily="Segoe MDL2 Assets"
                                       Style="{DynamicResource BaseTextBlockStyle}"
                                       Foreground="#06FFA5"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_Status_ReadyToRefresh}"
                                       FontSize="{DynamicResource FontSize}"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.65"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- State 3: Has Auth + Cache (Existing User) -->
                <StackPanel x:Name="HasDataPanel"
                            Visibility="{Binding ShowHasDataPanel, Converter={StaticResource BoolToVis}}">

                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="16"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_HasDataTitle}"
                                       Style="{DynamicResource BaseTextBlockStyle}"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_HasDataMessage}"
                                       Style="{DynamicResource BaseTextBlockStyle}"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"
                                       Margin="0,0,0,12"/>
                            <Button Content="{DynamicResource LOCPlayAch_Landing_Continue}"
                                    Command="{Binding ContinueCommand}"
                                    HorizontalAlignment="Center"
                                    Padding="16,6"
                                    MinWidth="110"/>
                        </StackPanel>
                    </Border>

                    <!-- Existing data indicator -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="16"
                            HorizontalAlignment="Center">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,6">
                                <Image Source="{StaticResource BadgeCompletedGame}"
                                       Width="20"
                                       Height="20"
                                       Margin="1"
                                       SnapsToDevicePixels="True"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                                <Image Source="{StaticResource BadgePlatinumHexagon}"
                                       Width="20"
                                       Height="20"
                                       Margin="1"
                                       SnapsToDevicePixels="True"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                                <Image Source="{StaticResource BadgeGoldPentagon}"
                                       Width="20"
                                       Height="20"
                                       Margin="1"
                                       SnapsToDevicePixels="True"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                            </StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_HasDataFound}"
                                       FontSize="{DynamicResource FontSize}"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.65"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

            </Grid>

            <!-- Theme Migration Section - Always Visible -->
            <StackPanel Margin="0,16,0,0">
                <!-- Section Header -->
                <TextBlock Text="{DynamicResource LOCPlayAch_ThemeMigration_Title}"
                           FontSize="{DynamicResource FontSize}"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}"
                           Opacity="0.7"
                           Margin="0,0,0,10"/>

                <!-- Migrate Theme Card -->
                <Border Background="{DynamicResource ControlBackgroundBrush}"
                        CornerRadius="4"
                        Padding="16"
                        Margin="0,0,0,12"
                        BorderBrush="{DynamicResource NormalBorderBrush}"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource LOCPlayAch_ThemeMigration_MigrateLabel}"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextBrush}"
                                   Margin="0,0,0,8"/>

                        <TextBlock Text="{DynamicResource LOCPlayAch_ThemeMigration_MigrateFullDescription}"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   Foreground="{DynamicResource TextBrush}"
                                   TextWrapping="Wrap"
                                   Opacity="0.7"
                                   Margin="0,0,0,12"/>

                        <!-- Theme Dropdown and Migration Button -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <ComboBox x:Name="MigrationThemeComboBox"
                                      ItemsSource="{Binding AvailableThemes}"
                                      DisplayMemberPath="BestDisplayName"
                                      SelectedValuePath="Path"
                                      SelectedValue="{Binding SelectedThemePath}"
                                      Width="200"
                                      Margin="0,0,8,0"
                                      VerticalContentAlignment="Center"
                                      IsEnabled="{Binding HasThemesToMigrate}"/>
                            <Button Content="{DynamicResource LOCPlayAch_ThemeMigration_Migration}"
                                    Command="{Binding MigrateThemeCommand}"
                                    Padding="12,6"
                                    MinWidth="100"
                                    IsEnabled="{Binding HasThemesToMigrate}"/>
                        </StackPanel>

                        <!-- No themes message -->
                        <TextBlock Text="{DynamicResource LOCPlayAch_ThemeMigration_NoThemesMessage}"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   Foreground="{DynamicResource TextBrush}"
                                   Opacity="0.6"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"
                                   Visibility="{Binding ShowNoThemesMessage, Converter={StaticResource BoolToVis}}"/>
                    </StackPanel>
                </Border>

                <!-- Revert Theme Card -->
                <Border Background="{DynamicResource ControlBackgroundBrush}"
                        CornerRadius="4"
                        Padding="16"
                        BorderBrush="{DynamicResource NormalBorderBrush}"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource LOCPlayAch_ThemeMigration_Revert}"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextBrush}"
                                   Margin="0,0,0,8"/>

                        <TextBlock Text="{DynamicResource LOCPlayAch_ThemeMigration_RevertDescription}"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   Foreground="{DynamicResource TextBrush}"
                                   TextWrapping="Wrap"
                                   Opacity="0.7"
                                   Margin="0,0,0,12"/>

                        <!-- Revertable Theme Dropdown and Revert Button -->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <ComboBox x:Name="RevertThemeComboBox"
                                      ItemsSource="{Binding RevertableThemes}"
                                      DisplayMemberPath="BestDisplayName"
                                      SelectedValuePath="Path"
                                      SelectedValue="{Binding SelectedRevertThemePath}"
                                      Width="200"
                                      Margin="0,0,8,0"
                                      VerticalContentAlignment="Center"
                                      IsEnabled="{Binding HasRevertableThemes}"/>
                            <Button Content="{DynamicResource LOCPlayAch_ThemeMigration_RevertButton}"
                                    Command="{Binding RevertThemeCommand}"
                                    Padding="12,6"
                                    MinWidth="100"
                                    IsEnabled="{Binding HasRevertableThemes}"/>
                        </StackPanel>

                        <!-- No revertable themes message -->
                        <TextBlock Text="{DynamicResource LOCPlayAch_ThemeMigration_NoRevertableThemes}"
                                   Style="{DynamicResource BaseTextBlockStyle}"
                                   Foreground="{DynamicResource TextBrush}"
                                   Opacity="0.6"
                                   FontSize="11"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"
                                   Visibility="{Binding ShowNoRevertableThemesMessage, Converter={StaticResource BoolToVis}}"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- End constrained content container -->
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
