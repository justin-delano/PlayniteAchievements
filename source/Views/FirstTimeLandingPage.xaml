<UserControl x:Class="PlayniteAchievements.Views.FirstTimeLandingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:PlayniteAchievements.Views.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="360">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PlayniteAchievements;component/Resources/RarityIcons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:BooleanConverter x:Key="BoolToVis" Mode="ToVisibility"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20,16,20,24">

            <!-- Plugin Icon -->
            <Image x:Name="PluginIcon"
                   Source="pack://application:,,,/icon.png"
                   Width="56"
                   Height="56"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,12"
                   RenderOptions.BitmapScalingMode="HighQuality"/>

            <!-- Main Title -->
            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_Title}"
                       Style="{DynamicResource BaseTextBlockStyle}"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource TextBrush}"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,6"/>

            <!-- Rarity Icons Decoration -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,4,0,20">
                <Image Source="{StaticResource BadgeBronzeTriangle}"
                       Width="28"
                       Height="28"
                       Margin="3"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <Image Source="{StaticResource BadgeSilverSquare}"
                       Width="28"
                       Height="28"
                       Margin="3"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <Image Source="{StaticResource BadgeGoldPentagon}"
                       Width="28"
                       Height="28"
                       Margin="3"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <Image Source="{StaticResource BadgePlatinumHexagon}"
                       Width="28"
                       Height="28"
                       Margin="3"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                <Image Source="{StaticResource BadgePerfectGame}"
                       Width="28"
                       Height="28"
                       Margin="3"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
            </StackPanel>

            <StackPanel MinWidth="400" MaxWidth="800" HorizontalAlignment="Center">

            <!-- Provider Status List - Always Visible -->
            <StackPanel Margin="0,0,0,16">
                <!-- Section Header -->
                <TextBlock Text="{DynamicResource LOCPlayAch_Landing_ProviderStatus}"
                           FontSize="{DynamicResource FontSizeSmall}"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource TextBrush}"
                           Opacity="0.7"
                           Margin="0,0,0,10"/>

                <!-- Provider Cards -->
                <ItemsControl ItemsSource="{Binding Providers}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,8"
                                    Background="{DynamicResource ControlBackgroundBrush}"
                                    CornerRadius="6"
                                    Padding="12,10">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="8"
                                                    ShadowDepth="2"
                                                    Opacity="0.25"
                                                    Color="#000000"/>
                                </Border.Effect>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="1"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsAuthenticated}" Value="True">
                                                <Setter Property="BorderBrush" Value="#06FFA5"/>
                                                <Setter Property="BorderThickness" Value="1"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Status Icon -->
                                    <TextBlock Grid.Column="0" Text="{Binding StatusIcon}"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="{DynamicResource FontSize}"
                                               Margin="0,0,10,0"
                                               VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsAuthenticated}" Value="True">
                                                        <Setter Property="Foreground" Value="#06FFA5"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsAuthenticated}" Value="False">
                                                        <Setter Property="Foreground" Value="#F72585"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- Provider Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                   Style="{DynamicResource BaseTextBlockStyle}"
                                                   FontWeight="Medium"
                                                   Foreground="{DynamicResource TextBrush}"/>
                                        <TextBlock Text="{Binding StatusSubtitle}"
                                                   FontSize="{DynamicResource FontSizeSmall}"
                                                   Foreground="{DynamicResource TextBrush}"
                                                   Opacity="0.6"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <!-- Status Badge -->
                                    <TextBlock Grid.Column="2" Text="{Binding StatusBadgeText}"
                                               FontSize="{DynamicResource FontSizeSmall}"
                                               FontWeight="SemiBold"
                                               Padding="6,2"
                                               VerticalAlignment="Center"
                                               Margin="6,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#666666"/>
                                                <Setter Property="Background" Value="#2A2A2A"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsAuthenticated}" Value="True">
                                                        <Setter Property="Foreground" Value="#005533"/>
                                                        <Setter Property="Background" Value="#06FFA5"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Content states switched via visibility bindings -->
            <Grid>

                <!-- State 1: No Auth Configured -->
                <StackPanel x:Name="NoAuthPanel"
                            Visibility="{Binding ShowNoAuthPanel, Converter={StaticResource BoolToVis}}">

                    <!-- Config Card -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="16"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NoAuthTitle}"
                                       Style="{DynamicResource BaseTextBlockStyle}"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NoAuthMessage}"
                                       Style="{DynamicResource BaseTextBlockStyle}"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="{DynamicResource LOCPlayAch_Landing_SettingsDiagramTitle}"
                               Style="{DynamicResource BaseTextBlockStyle}"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,10,0,8"/>

                    <!-- Navigation Tree - Simple indented list with arrows -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="14,12"
                            Margin="0,0,0,6">
                        <StackPanel>
                            <!-- Playnite icon with arrow pointing down -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <!-- Playnite icon from executable -->
                                <Image Grid.Column="0" Source="{Binding PlayniteIconPath}"
                                       Width="24"
                                       Height="24"
                                       RenderOptions.BitmapScalingMode="HighQuality"
                                       VerticalAlignment="Center"
                                       Margin="0,0,10,0">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding PlayniteIconPath}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                                <!-- Fallback: Playnite icon if executable icon not available -->
                                <TextBlock Grid.Column="0" Text="♦"
                                           FontSize="20"
                                           Foreground="{DynamicResource TextBrush}"
                                           Opacity="0.7"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"
                                           Visibility="Collapsed">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding PlayniteIconPath}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <!-- Down arrow -->
                                <TextBlock Grid.Column="1" Text="▼"
                                           Style="{DynamicResource BaseTextBlockStyle}"
                                           Foreground="{DynamicResource TextBrush}"
                                           Opacity="0.5"
                                           VerticalAlignment="Center"
                                           Margin="4,0,0,0"/>
                            </Grid>

                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NavInstructions}"
                                       FontSize="{DynamicResource FontSizeSmall}"
                                       Foreground="{DynamicResource TextBrush}"
                                       Opacity="0.8"
                                       Margin="0,0,0,10"/>

                            <!-- Navigation tree items -->
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                    <TextBlock Text="→"
                                               Style="{DynamicResource BaseTextBlockStyle}"
                                               Foreground="{DynamicResource TextBrush}" Opacity="0.5"/>
                                    <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NavSettings}"
                                               Style="{DynamicResource BaseTextBlockStyle}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="16,0,0,3">
                                    <TextBlock Text="→"
                                               Style="{DynamicResource BaseTextBlockStyle}"
                                               Foreground="{DynamicResource TextBrush}" Opacity="0.5"/>
                                    <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NavAddons}"
                                               Style="{DynamicResource BaseTextBlockStyle}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="32,0,0,3">
                                    <TextBlock Text="→"
                                               Style="{DynamicResource BaseTextBlockStyle}"
                                               Foreground="{DynamicResource TextBrush}" Opacity="0.5"/>
                                    <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NavExtensionSettings}"
                                               Style="{DynamicResource BaseTextBlockStyle}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="48,0,0,3">
                                    <TextBlock Text="→"
                                               Style="{DynamicResource BaseTextBlockStyle}"
                                               Foreground="{DynamicResource TextBrush}" Opacity="0.5"/>
                                    <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NavGeneric}"
                                               Style="{DynamicResource BaseTextBlockStyle}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="64,0,0,0">
                                    <TextBlock Text="→"
                                               Style="{DynamicResource BaseTextBlockStyle}"
                                               Foreground="#4CC9F0"/>
                                    <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NavPluginName}"
                                               Style="{DynamicResource BaseTextBlockStyle}"
                                               FontWeight="SemiBold" Foreground="#4CC9F0"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Configuration hint -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="12,10"
                            Margin="0,0,0,6">
                        <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NavThenConfigure}"
                                   FontSize="{DynamicResource FontSizeSmall}"
                                   Foreground="{DynamicResource TextBrush}"
                                   TextWrapping="Wrap"
                                   Opacity="0.7"/>
                    </Border>

                </StackPanel>

                <!-- State 2: Has Auth, No Cache (Needs Scan) -->
                <StackPanel x:Name="NeedsScanPanel"
                            Visibility="{Binding ShowNeedsScanPanel, Converter={StaticResource BoolToVis}}">

                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="16"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NeedsScanTitle}"
                                       Style="{DynamicResource BaseTextBlockStyle}"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NeedsScanMessage}"
                                       Style="{DynamicResource BaseTextBlockStyle}"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"
                                       Margin="0,0,0,12"/>
                            <Button Content="{DynamicResource LOCPlayAch_Landing_BeginScan}"
                                    Command="{Binding BeginScanCommand}"
                                    HorizontalAlignment="Center"
                                    Padding="16,6"
                                    MinWidth="110"/>
                        </StackPanel>
                    </Border>

                    <!-- Ready indicator -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="16"
                            HorizontalAlignment="Center">
                        <StackPanel>
                            <TextBlock Text="&#xE8FB;"
                                       FontFamily="Segoe MDL2 Assets"
                                       Style="{DynamicResource BaseTextBlockStyle}"
                                       Foreground="#06FFA5"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_Status_ReadyToScan}"
                                       FontSize="{DynamicResource FontSizeSmall}"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.65"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- State 3: Has Auth + Cache (Existing User) -->
                <StackPanel x:Name="HasDataPanel"
                            Visibility="{Binding ShowHasDataPanel, Converter={StaticResource BoolToVis}}">

                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="16"
                            Margin="0,0,0,12">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_HasDataTitle}"
                                       Style="{DynamicResource BaseTextBlockStyle}"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextBrush}"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_HasDataMessage}"
                                       Style="{DynamicResource BaseTextBlockStyle}"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.85"
                                       Margin="0,0,0,12"/>
                            <Button Content="{DynamicResource LOCPlayAch_Landing_Continue}"
                                    Command="{Binding ContinueCommand}"
                                    HorizontalAlignment="Center"
                                    Padding="16,6"
                                    MinWidth="110"/>
                        </StackPanel>
                    </Border>

                    <!-- Existing data indicator -->
                    <Border Background="{DynamicResource ControlBackgroundBrush}"
                            CornerRadius="4"
                            Padding="16"
                            HorizontalAlignment="Center">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,6">
                                <Image Source="{StaticResource BadgePerfectGame}"
                                       Width="20"
                                       Height="20"
                                       Margin="1"
                                       SnapsToDevicePixels="True"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                                <Image Source="{StaticResource BadgePlatinumHexagon}"
                                       Width="20"
                                       Height="20"
                                       Margin="1"
                                       SnapsToDevicePixels="True"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                                <Image Source="{StaticResource BadgeGoldPentagon}"
                                       Width="20"
                                       Height="20"
                                       Margin="1"
                                       SnapsToDevicePixels="True"
                                       RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                            </StackPanel>
                            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_HasDataFound}"
                                       FontSize="{DynamicResource FontSizeSmall}"
                                       Foreground="{DynamicResource TextBrush}"
                                       TextWrapping="Wrap"
                                       Opacity="0.65"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

            </Grid>

            <!-- End constrained content container -->
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</UserControl>
