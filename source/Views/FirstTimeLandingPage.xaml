<UserControl x:Class="PlayniteAchievements.Views.FirstTimeLandingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:PlayniteAchievements.Views.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="400">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PlayniteAchievements;component/Resources/RarityIcons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <converters:BooleanConverter x:Key="BoolToVis" Mode="ToVisibility"/>

            <!-- Trophy icon style -->
            <Style x:Key="TrophyIconStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                <Setter Property="FontSize" Value="48"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="Margin" Value="0,0,0,16"/>
            </Style>

            <!-- Title style -->
            <Style x:Key="TitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="TextAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
            </Style>

            <!-- Subtitle style -->
            <Style x:Key="SubtitleStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="Margin" Value="0,16,0,8"/>
            </Style>

            <!-- Message style -->
            <Style x:Key="MessageStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="Margin" Value="0,0,0,16"/>
            </Style>

            <!-- Step box style -->
            <Style x:Key="StepBoxStyle" TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
                <Setter Property="CornerRadius" Value="4"/>
                <Setter Property="Padding" Value="12"/>
                <Setter Property="Margin" Value="0,8,0,0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush">
                    <Setter.Value>
                        <SolidColorBrush Color="{DynamicResource TextColor}" Opacity="0.2"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Step text style -->
            <Style x:Key="StepTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="Margin" Value="0,4,0,0"/>
            </Style>

            <!-- Primary button style -->
            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{DynamicResource ButtonBackgroundBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource ButtonForegroundBrush}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="24,10"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Border"
                                    Background="{TemplateBinding Background}"
                                    Padding="{TemplateBinding Padding}"
                                    CornerRadius="4"
                                    BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Border" Property="Opacity" Value="0.8"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="Border" Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Arrow icon style -->
            <Style x:Key="ArrowIconStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="Opacity" Value="0.6"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="32" MaxWidth="380">

            <!-- Trophy Icon -->
            <TextBlock Text="&#xEDD7;"
                       Style="{StaticResource TrophyIconStyle}"/>

            <!-- Main Title -->
            <TextBlock Text="{DynamicResource LOCPlayAch_Landing_Title}"
                       Style="{StaticResource TitleStyle}"/>

            <!-- Content states switched via visibility bindings -->
            <Grid>

                <!-- State 1: No Auth Configured -->
                <StackPanel x:Name="NoAuthPanel"
                            Visibility="{Binding ShowNoAuthPanel, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NoAuthTitle}"
                               Style="{StaticResource SubtitleStyle}"/>
                    <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NoAuthMessage}"
                               Style="{StaticResource MessageStyle}"/>

                    <TextBlock Text="{DynamicResource LOCPlayAch_Landing_SettingsDiagramTitle}"
                               Style="{StaticResource SubtitleStyle}"/>

                    <!-- Settings Navigation Diagram -->
                    <Border Style="{StaticResource StepBoxStyle}">
                        <StackPanel>
                            <TextBlock Text="&#xE8B7;  {DynamicResource LOCPlayAch_Landing_Step1}"
                                       Style="{StaticResource StepTextStyle}"
                                       FontFamily="Segoe MDL2 Assets"/>
                            <TextBlock Text="     &#xE972;  &#xE8B7;"
                                       Style="{StaticResource ArrowIconStyle}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource StepBoxStyle}">
                        <StackPanel>
                            <TextBlock Text="&#xE8B7;  {DynamicResource LOCPlayAch_Landing_Step2}"
                                       Style="{StaticResource StepTextStyle}"
                                       FontFamily="Segoe MDL2 Assets"/>
                            <TextBlock Text="     &#xE972;  &#xE8B7;"
                                       Style="{StaticResource ArrowIconStyle}"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource StepBoxStyle}">
                        <StackPanel>
                            <TextBlock Text="&#xE8B7;  {DynamicResource LOCPlayAch_Landing_Step3}"
                                       Style="{StaticResource StepTextStyle}"
                                       FontFamily="Segoe MDL2 Assets"/>
                            <TextBlock Margin="0,8,0,0"
                                       Text="{DynamicResource LOCPlayAch_Landing_SettingsFinalHint}"
                                       Style="{StaticResource MessageStyle}"
                                       FontSize="12"
                                       Opacity="0.7"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Margin="0,16,0,0"
                               Text="{DynamicResource LOCPlayAch_Landing_RefreshAfterConfig}"
                               Style="{StaticResource MessageStyle}"
                               FontSize="12"
                               Opacity="0.7"/>
                </StackPanel>

                <!-- State 2: Has Auth, No Cache (Needs Scan) -->
                <StackPanel x:Name="NeedsScanPanel"
                            Visibility="{Binding ShowNeedsScanPanel, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NeedsScanTitle}"
                               Style="{StaticResource SubtitleStyle}"/>
                    <TextBlock Text="{DynamicResource LOCPlayAch_Landing_NeedsScanMessage}"
                               Style="{StaticResource MessageStyle}"/>

                    <Button Content="{DynamicResource LOCPlayAch_Landing_BeginScan}"
                            Command="{Binding BeginScanCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,16,0,0"/>
                </StackPanel>

                <!-- State 3: Has Auth + Cache (Existing User) -->
                <StackPanel x:Name="HasDataPanel"
                            Visibility="{Binding ShowHasDataPanel, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{DynamicResource LOCPlayAch_Landing_HasDataTitle}"
                               Style="{StaticResource SubtitleStyle}"/>
                    <TextBlock Text="{DynamicResource LOCPlayAch_Landing_HasDataMessage}"
                               Style="{StaticResource MessageStyle}"/>

                    <Button Content="{DynamicResource LOCPlayAch_Landing_Continue}"
                            Command="{Binding ContinueCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,16,0,0"/>
                </StackPanel>

            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
