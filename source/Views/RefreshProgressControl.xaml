<UserControl x:Class="PlayniteAchievements.Views.RefreshProgressControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        d:DesignHeight="280"
        d:DesignWidth="400">

    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0"
                Background="{DynamicResource ControlBackgroundBrush}"
                BorderBrush="{DynamicResource NormalBorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Badge Icon -->
                <Image Grid.Column="0"
                       Source="{StaticResource BadgePlatinumHexagon}"
                       Width="28"
                       Height="28"
                       Margin="0,0,12,0"
                       VerticalAlignment="Center"
                       SnapsToDevicePixels="True"
                       RenderOptions.BitmapScalingMode="NearestNeighbor"
                       Effect="{StaticResource BadgeShadow}"/>

                <!-- Title -->
                <TextBlock Grid.Column="1"
                           Text="{DynamicResource LOCPlayAch_Title_PluginName}"
                           Style="{DynamicResource BaseTextBlockStyle}"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextBrush}"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Progress Section -->
        <Border Grid.Row="1"
                Background="{DynamicResource ControlBackgroundBrush}"
                BorderBrush="{DynamicResource NormalBorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,14">
            <StackPanel VerticalAlignment="Center">
                <!-- Progress Message -->
                <TextBlock Text="{Binding ProgressMessage}"
                           Style="{DynamicResource BaseTextBlockStyle}"
                           Foreground="{DynamicResource TextBrush}"
                           Opacity="0.8"
                           TextWrapping="Wrap"
                           Margin="0,0,0,12"
                           MinHeight="40"/>

                <!-- Progress Bar with Percentage -->
                <Grid Margin="0,0,0,12">
                    <ProgressBar Value="{Binding ProgressPercent}"
                                 Style="{StaticResource GameProgressBar}"
                                 Height="22"/>
                    <TextBlock Text="{Binding ProgressPercent, StringFormat={}{0:F0}%}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Style="{DynamicResource BaseTextBlockStyle}"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                </Grid>

                <!-- Hint Text -->
                <TextBlock Text="{Binding RefreshRunningNote}"
                           Style="{DynamicResource BaseTextBlockStyle}"
                           Foreground="{DynamicResource TextBrush}"
                           Opacity="0.6"
                           FontSize="11"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Buttons Section -->
        <Border Grid.Row="2"
                Background="{DynamicResource ControlBackgroundBrush}"
                Padding="16,12">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="{DynamicResource LOCPlayAch_Progress_ButtonHide}"
                        Command="{Binding HideCommand}"
                        Padding="12,6"
                        MinWidth="80"
                        Margin="0,0,6,0"
                        Visibility="{Binding ShowInProgressButtons, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <Button Content="{DynamicResource LOCPlayAch_Button_Cancel}"
                        Command="{Binding CancelCommand}"
                        Padding="12,6"
                        MinWidth="80"
                        Margin="0,0,6,0"
                        Visibility="{Binding ShowInProgressButtons, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <Button Content="{DynamicResource LOCPlayAch_Progress_ButtonContinue}"
                        Command="{Binding ContinueCommand}"
                        Padding="12,6"
                        MinWidth="80"
                        Margin="0,0,6,0"
                        IsDefault="True"
                        Visibility="{Binding ShowCompleteButtons, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <Button Content="{DynamicResource LOCPlayAch_Progress_ButtonOpenGame}"
                        Command="{Binding OpenSingleGameCommand}"
                        Padding="12,6"
                        MinWidth="120"
                        Visibility="{Binding ShowOpenSingleGameButton, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
