<UserControl x:Class="PlayniteAchievements.Views.CapstoneControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:PlayniteAchievements.Views.Helpers"
             xmlns:models="clr-namespace:PlayniteAchievements.Models.Achievements"
             mc:Ignorable="d"
             d:DesignHeight="640" d:DesignWidth="760">

    <UserControl.Resources>
        <ResourceDictionary>
            <!-- Checkbox style for marker selection -->
            <Style x:Key="MarkerCheckBoxStyle" TargetType="CheckBox">
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="CheckBox">
                            <Grid Background="Transparent">
                                <Ellipse x:Name="OuterEllipse"
                                         Width="20" Height="20"
                                         Stroke="{DynamicResource TextBrush}"
                                         StrokeThickness="2"
                                         Fill="Transparent"/>
                                <Ellipse x:Name="InnerCheck"
                                         Width="12" Height="12"
                                         Fill="{DynamicResource GlyphBrush}"
                                         Visibility="Collapsed"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="InnerCheck" Property="Visibility" Value="Visible"/>
                                    <Setter TargetName="OuterEllipse" Property="Stroke" Value="{DynamicResource GlyphBrush}"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="OuterEllipse" Property="StrokeThickness" Value="3"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="14">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{DynamicResource ControlBackgroundBrush}"
                BorderBrush="{DynamicResource NormalBorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="14,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Game Image (Cover or Icon based on settings) -->
                <Border Grid.Column="0"
                        Margin="0,0,14,0"
                        CornerRadius="4"
                        ClipToBounds="True"
                        Background="{DynamicResource ControlBackgroundBrush}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Width" Value="48"/>
                            <Setter Property="Height" Value="48"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding UseCoverAspect}" Value="True">
                                    <Setter Property="Width" Value="80"/>
                                    <Setter Property="Height" Value="108"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Image Stretch="UniformToFill"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           helpers:AsyncImage.Uri="{Binding GameImagePath}"
                           helpers:AsyncImage.DecodePixel="160"/>
                </Border>

                <!-- Game Info -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <!-- <TextBlock Text="{DynamicResource LOCPlayAch_Capstone_Header}"
                               Style="{DynamicResource BaseTextBlockStyle}"
                               FontSize="{DynamicResource FontSizeLarge}"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextBrush}"/> -->
                    <TextBlock Text="{Binding GameName}"
                               Style="{DynamicResource BaseTextBlockStyle}"
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,2,0,0"
                               FontWeight="SemiBold"
                               Opacity="0.9"/>
                    <TextBlock Text="{DynamicResource LOCPlayAch_Capstone_Subtitle}"
                               Style="{DynamicResource BaseTextBlockStyle}"
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,6,0,0"
                               Opacity="0.75"
                               TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding CurrentMarkerText}"
                               Style="{DynamicResource BaseTextBlockStyle}"
                               Foreground="{DynamicResource TextBrush}"
                               Margin="0,8,0,0"
                               FontStyle="Italic"
                               Opacity="0.75"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Search Bar -->
        <Border Grid.Row="1"
                Padding="0,8,0,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource SearchTextBoxStyle}"/>
                    <TextBlock Text="{DynamicResource LOCPlayAch_Capstone_SearchPlaceholder}"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="9,0,0,0"
                               Foreground="{DynamicResource TextBrush}"
                               Opacity="0.5"
                               IsHitTestVisible="False">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SearchText}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SearchText}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <Button Grid.Column="1"
                        Content="Ã—"
                        Command="{Binding ClearSearchCommand}"
                        Width="20" Height="20"
                        Margin="4,0,0,0"
                        Padding="0"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="{DynamicResource TextBrush}"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SearchText}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <DataGrid x:Name="AchievementsDataGrid"
                  Grid.Row="2"
                  Margin="0,10,0,0"
                  ItemsSource="{Binding AchievementOptions}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  HeadersVisibility="Column"
                  GridLinesVisibility="None"
                  RowBackground="Transparent"
                  BorderThickness="0"
                  Background="Transparent"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserResizeRows="False"
                  CanUserResizeColumns="True"
                  CanUserReorderColumns="False"
                  CanUserSortColumns="True"
                  EnableRowVirtualization="True"
                  VirtualizingStackPanel.VirtualizationMode="Recycling"
                  VirtualizingStackPanel.ScrollUnit="Pixel"
                  ScrollViewer.CanContentScroll="True"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ColumnHeaderStyle="{StaticResource AchievementColumnHeaderStyle}"
                  PreviewMouseLeftButtonDown="DataGrid_PreviewMouseLeftButtonDown"
                  Sorting="DataGrid_Sorting">

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell" BasedOn="{StaticResource AchievementCellStyle}"/>
            </DataGrid.CellStyle>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource AchievementRowStyle}">
                    <Setter Property="MinHeight" Value="66"/>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <!-- Marker Selection Checkbox -->
                <DataGridTemplateColumn Width="44" MinWidth="44" MaxWidth="44" CanUserSort="False" CanUserResize="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox Style="{StaticResource MarkerCheckBoxStyle}"
                                      IsChecked="{Binding IsCurrentMarker, Mode=OneWay}"
                                      Click="MarkerCheckBox_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Status: Checkmark (unlocked) or Padlock (locked) -->
                <DataGridTemplateColumn Width="36" MinWidth="36" MaxWidth="36" CanUserSort="False" CanUserResize="False"
                                        CellTemplate="{StaticResource AchievementStatusTemplate}"/>

                <!-- Achievement Icon -->
                <DataGridTemplateColumn Width="74" MinWidth="74" MaxWidth="74" CanUserSort="False" CanUserResize="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid Width="52" Height="52" VerticalAlignment="Center" Margin="4,7,0,7">
                                <Border CornerRadius="6" ClipToBounds="True" Opacity="0.95">
                                    <Image Stretch="UniformToFill"
                                           helpers:AsyncImage.Uri="{Binding DisplayIcon}"
                                           helpers:AsyncImage.DecodePixel="64"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Achievement Name with Badge -->
                <DataGridTemplateColumn Width="*" Header="{DynamicResource LOCPlayAch_Capstone_Column_Achievement}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,6">
                                <!-- Completed game badge for current marker -->
                                <Image Source="{StaticResource BadgeCompletedGame}"
                                       Width="18"
                                       Height="18"
                                       Margin="0,0,8,0"
                                       VerticalAlignment="Center"
                                       Effect="{StaticResource BadgeShadow}">
                                    <Image.Style>
                                        <Style TargetType="Image" BasedOn="{StaticResource RarityIcon}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsCurrentMarker}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>

                                <TextBlock Text="{Binding DisplayNameResolved}"
                                           Foreground="{DynamicResource TextBrush}"
                                           TextWrapping="Wrap"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontSize" Value="{DynamicResource FontSize}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEffectivelyHidden}" Value="True">
                                                    <Setter Property="FontStyle" Value="Italic"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Description -->
                <DataGridTemplateColumn Width="*" Header="{DynamicResource LOCPlayAch_Capstone_Column_Description}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DescriptionResolved}"
                                       Foreground="{DynamicResource TextBrush}"
                                       Opacity="0.7"
                                       TextWrapping="Wrap"
                                       VerticalAlignment="Center"
                                       Margin="0,6">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="{DynamicResource FontSize}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEffectivelyHidden}" Value="True">
                                                <Setter Property="FontStyle" Value="Italic"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Rarity -->
                <DataGridTemplateColumn Width="*" Header="{DynamicResource LOCPlayAch_Column_Rarity}" SortMemberPath="GlobalPercent" SortDirection="Ascending"
                                        CellTemplate="{StaticResource AchievementRarityTemplate}"/>

                <!-- Points -->
                <DataGridTemplateColumn Width="72" Header="{DynamicResource LOCPlayAch_Column_Points}" SortMemberPath="Points"
                                        CellTemplate="{StaticResource AchievementPointsTemplate}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
